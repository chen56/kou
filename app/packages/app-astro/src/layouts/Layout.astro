---
interface Props {
    title: string;
}

const {title} = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="description" content="kou cloud apps"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>{title}</title>
</head>
<body>

<main>
    <div class="sticky top-0 navbar bg-blue-950 text-neutral-content">
        <div class="navbar-start">
            <a class="link link-hover text-xl">Kou</a>
        </div>
        <div class="navbar-end">
            <a class="link link-hover text-xl">github</a>
        </div>
    </div>

    <div class="flex">
        <!--h-dvh 使左边栏占满viewport所有有效高度-->
        <div class="flex-none min-w-48   bg-base-200 h-dvh  ">
            <ul class="menu bg-base-200 w-56 rounded-box">
                <li><a href="/">Home</a></li>
                <li><a href="/x">x</a></li>
            </ul>

        </div>
        <div class="flex-auto">
            <slot/>
        </div>
        <!--<span class="flex-none min-w-48    bg-base-200  ">nav right</span>-->
    </div>
</main>


</body>
</html>